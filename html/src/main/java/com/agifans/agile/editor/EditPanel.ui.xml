<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:editor='urn:import:com.agifans.agile.editor'
  xmlns:picture='urn:import:com.agifans.agile.editor.picture'
  xmlns:view='urn:import:com.agifans.agile.editor.view'
  xmlns:logic='urn:import:com.agifans.agile.editor.logic'
  xmlns:sound='urn:import:com.agifans.agile.editor.sound'>

  <editor:ScrolledTabLayoutPanel ui:field="tabs" barUnit='PX' barHeight='44'>
  
    <editor:tab>
      <editor:header size='7'><span>📜</span> Logics</editor:header>
      <logic:LogicEditPanel ui:field="logicEditPanel" />
    </editor:tab>
    
    <editor:tab>
      <editor:header size='7'><span>🖼️</span> Pictures</editor:header>
      <picture:PictureEditPanel ui:field="pictureEditPanel" />
    </editor:tab>
    
    <editor:tab>
      <editor:header size='7'><span>🚶‍♂️</span> Views</editor:header>
      <view:ViewEditPanel ui:field="viewEditPanel" />
    </editor:tab>
    
    <editor:tab>
      <editor:header size='7'><span>🔉</span> Sounds</editor:header>
      <sound:SoundEditPanel ui:field="soundEditPanel" />
    </editor:tab>
    
    <editor:tab>
      <editor:header size='7'><span>👜</span> Objects</editor:header>
      <g:Label>OBJECT</g:Label>
    </editor:tab>
    
    <editor:tab>
      <editor:header size='7'><span>💬</span> Words</editor:header>
      <g:Label>WORDS</g:Label>
    </editor:tab>
    
  </editor:ScrolledTabLayoutPanel>
  
</ui:UiBinder>